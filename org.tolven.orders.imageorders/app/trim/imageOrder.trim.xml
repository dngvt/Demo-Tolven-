<?xml version="1.0" encoding="UTF-8"?>
<trim xmlns="urn:tolven-org:trim:4.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:tolven-org:trim:4.0 http://www.tolven.org/xsd/trim4">
	<abstract>true</abstract>
	<name>obs/evn/imageOrder</name>
	<author>Tolven</author>
	<menu>global:imageOrderMenu</menu>
	<act classCode="OBS" moodCode="RQO">
		<bind application="echr" phase="create">
			<placeholder bindAction="merge">
				<path>echr:patient:imageOrder</path>
			</placeholder>
		</bind>
		<effectiveTime>
			<label>Order for date</label>
			<new datatype="TS" function="now" />
		</effectiveTime>
		<relationship typeCode="EVN" direction="OUT" name="reason">
			<act moodCode="EVN" classCode="OBS">
				<observation>
					<value>
						<label>Reason</label>
						<ST>#{iamgeorder.reason}</ST>
					</value>
				</observation>
			</act>
		</relationship>
		<relationship typeCode="EVN" direction="OUT" name="priority">
			<act moodCode="EVN" classCode="OBS">
				<observation>
					<value>
						<valueSet>priority</valueSet>
						<CE>
							#{iamgeorder.priorityCE}
						</CE>
					</value>
				</observation>
			</act>
		</relationship>
		<relationship typeCode="EVN" direction="OUT" name="frequency">
			<act moodCode="EVN" classCode="OBS">
				<observation>
					<value>
						<valueSet>frequency</valueSet>
						<CE>
							#{iamgeorder.frequencyCE}
						</CE>
					</value>
				</observation>
			</act>
		</relationship>
		<relationship typeCode="EVN" direction="OUT" name="timing">
			<act moodCode="EVN" classCode="OBS">
				<observation>
					<value>
						<label>Timing</label>
						<ST>#{imageorder.timing}</ST>
					</value>
				</observation>
			</act>
		</relationship>
		<relationship typeCode="EVN" direction="OUT" name="startImmediately">
			<act moodCode="EVN" classCode="OBS">
				<observation>
					<value>
						<label>Start Immediately</label>
						<valueSet>boolean</valueSet>
						<CE>#{imageorder.startImmediatelyCE}</CE>
					</value>
				</observation>
			</act>
		</relationship>
		</act>
</trim>